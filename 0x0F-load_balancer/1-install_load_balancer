#!/usr/bin/env bash
# install and configure haproxy

sudo apt update
sudo apt install -y haproxy

sudo mv /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.old
touch /etc/haproxy/haproxy.cfg

echo"
frontend webserver
    bind *:80
    mode http
    default_backend webfarm

backend webfarm
    mode http
    balance roundrobin
    server web-01 119623-web-01 54.144.197.148:80 check
    server web-02 119623-web-02 52.204.61.125:80 check
" | sudo tee -a /etc/haproxy/haproxy.cfg > /dev/null

sudo systemctl enable haproxy

sudo systemctl start haproxy
