global
    maxconn 4096
    pidfile /var/run/haproxy.pid
    tune.ssl.default-dh-param 2048

defaults
    log global
    mode http
    option httplog
    option dontlognull
    option forwardfor
    option http-server-close
    timeout server 10m
    timeout client 10m
    timeout http-request 10s

frontend www-https
    bind *:443 ssl crt /etc/letsencrypt/live/www.example.com/fullchain.pem
    http-request redirect scheme https unless { ssl_fc }
    default_backend www-backend

backend www-backend
    mode http
    balance roundrobin
    server 119623-web-01 52.86.27.65:80 check
    server 119623-web-02 100.25.13.63:80 check
    http-request set-header X-Forwarded-Proto https
    http-request set-header Host www.gachenge.tech
    http-request set-header X-Real-IP %[src]
    http-request set-header X-Forwarded-For %[src]
    http-response set-header Server Holberton School
